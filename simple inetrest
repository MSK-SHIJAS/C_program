# include <stdio.h>
# include <stdlib.h>

int main(){

    float P,R,T,SI;
  

    printf("Enter the principal: ");
    scanf("%f", &P);

    printf("Enter the rate: ");
    scanf("%f", &R);

    printf("Enter the time: ");
    scanf("%f", &T);

    SI = (P * R * T) / 100;
    printf("The Simple interest is %f", SI);

    return 0;

}
