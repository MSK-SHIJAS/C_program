#include <stdio.h>
#include <string.h>

int main()
{
    char string[100],ch = '-';

      printf("Enter the string :");
      scanf(" %[^\n]", string);
    for(int i = 0; i < strlen(string); i++){
        if(string[i] == ' ')
        {
            string[i] = ch;
        }

    }

    printf("String after replacing spaces with given character: ");
    printf("%s", string);

    return 0;
}
